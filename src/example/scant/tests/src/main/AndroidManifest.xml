<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.novoda.scant.tests">
    <application>
        <activity android:name=".MainActivity" android:label="@string/app_name">
           <intent-filter>
               <action android:name="android.intent.action.MAIN"/>
               <category android:name="android.intent.category.LAUNCHER"/>
           </intent-filter>
        </activity>

        <uses-library android:name="android.test.runner"/>
    </application>

    <instrumentation android:label="Tests"
                     android:targetPackage="com.novoda.scant"
                     android:name="org.scalatest.tools.SpecRunner"/>

    <uses-sdk android:minSdkVersion="14"/>
</manifest>
